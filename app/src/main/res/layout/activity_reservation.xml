<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4165af"
    tools:context=".Reservation">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="271dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:text="Reservation"
        android:textColor="@color/hintColor"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/txtdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txtdetails"
        android:layout_width="347dp"
        android:layout_height="130dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="ReservationDetails"
        android:inputType="textMultiLine"
        android:textColorHint="@color/hintColor"
        app:layout_constraintBottom_toTopOf="@+id/btnSub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Reservation Date"
        android:inputType="date"
        android:textColorHint="@color/hintColor"
        app:layout_constraintBottom_toTopOf="@+id/txttime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Reservation time"
        android:inputType="time"
        android:textColorHint="@color/hintColor"
        app:layout_constraintBottom_toTopOf="@+id/txttype"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txttype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:hint="ReservationType"
        android:inputType="textPersonName"
        android:textColorHint="@color/hintColor"
        app:layout_constraintBottom_toTopOf="@+id/txtdetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Submit "
        android:textAllCaps="false"
        android:textColor="#7390CD"
        app:backgroundTint="#F8F2F2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="click"
        app:strokeColor="#FAF6F6"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>